<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя босса"
        android:layout_gravity="center"
        android:id="@+id/text_name_boss"
        android:textSize="9pt"/>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Жизни у босса"/>
    <ProgressBar

        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:progress="20"
        />
    <TextView
        android:id="@+id/life_boss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:id="@+id/image_view_boss"/>
    <ImageButton
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_reload"
        android:layout_gravity="center"
        android:onClick="refresh"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Обновить"
        android:layout_gravity="center"/>
</LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мой урон..."
android:id="@+id/text_my_uron"
        android:textSize="8pt"
         />

<ImageButton
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/orugie_jad"
    android:layout_alignParentBottom="true"
    android:id="@+id/image_button_jad"

     />

    <ImageButton
        android:id="@+id/image_button_finka"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/orugie_finka"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/image_button_jad"
        android:layout_toEndOf="@+id/image_button_jad" />

    <ImageButton
        android:id="@+id/image_button_samopal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/orugie_samopal"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/image_button_finka"
        android:layout_toEndOf="@+id/image_button_finka" />

    <ImageButton
        android:id="@+id/image_button_pyrom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/orugie_pyrom_v_solnyshko"
        android:layout_alignParentBottom="true"
        android:onClick="onPyrom"
        android:layout_toRightOf="@+id/image_button_samopal"
        android:layout_toEndOf="@+id/image_button_samopal" />

    <ImageButton
        android:id="@+id/image_button_palcem_v_glaz"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/orugie_palcem_v_glaz"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/image_button_pyrom"
        android:layout_toEndOf="@+id/image_button_pyrom" />

    <ImageButton
        android:id="@+id/image_button_v_pah"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/orugie_udar_v_pah"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:onClick="onVPah"
        android:layout_toRightOf="@+id/image_button_palcem_v_glaz"
        android:layout_toEndOf="@+id/image_button_palcem_v_glaz" />
</RelativeLayout>
</LinearLayout>